/* 第一部分 */
.favorite-top image{
  width:20px;
  height:20px;
  margin-right:5px;
}
.favorite-top{
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding:10px 0;
}
.favorite-top-left,.favorite-top-right{
  display:flex;
  justify-content: center;
  align-items: center;
}
.favorite-top-right-txt{
  color:#ccc;
}

/* 第一部分 */


/* 第二部分 */
.goodItem{
  border-radius:10px;
  box-shadow: 1px 1px 10px 1px #ccc;
  padding-bottom:10px;
  margin:10px 0;
}
.goodItem-top{
  position:relative;
}
.goodItem-top-in{
  position: absolute;
  right:20rpx;
  bottom:20rpx;
  display:flex;
  background-color:rgba(0,0,0,0.2);
  border-radius: 4px;
  color:#fff;
}
.goodItem-top .goodItem-img1{
  width:100%;
  height:425rpx;
}
.goodItem-top .goodItem-img2{
  width:20px;
  height:20px;
}


.goodItem-bottom{
  display:flex;
  justify-content: space-between;
}
.goodItem-bottom image{
  width:20px;
  height:20px;
}

.goodItem-bottom-left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left:5px;
}
.goodItem-bottom-right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right:5px;
}

.goodItem-bottom-left-text1{
  font-weight:bold;
}
.goodItem-bottom-left-text2{
  color:#f01;
}

.noFavorite{
  width:100%;
  height:250px;
  display:flex;
  justify-content: center;
  margin-top:100rpx;
}
.noFavorite image{
  width:400rpx;
  height:200px;
}

/* 第二部分 */







